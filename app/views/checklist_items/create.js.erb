<% if @checklist_item.persisted? %>
$('#checklist-<%= @checklist.id %>-item-').replaceWith('<%= j render("checklist_item", checklist_item: @checklist_item) %>');
<% else %>
$('#checklist-<%= @checklist.id %>-item-').remove();
<% end %>
$('#checklist-<%= @checklist.id %>-add').removeClass('hidden');
