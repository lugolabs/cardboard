<div class="card">
  <div class="card-body">
    <h3 class="card-title h5 mt-0"><%= link_to board.title, board, class: 'text-dark' %></h3>
    <% if own_board?(board) %>
      <%= link_to t('delete'), board, method: :delete, data: { confirm: 'Are you sure you want to delete this card?' }, class: 'card-link text-xs text-danger' %>
    <% end %>
  </div>
</div>
