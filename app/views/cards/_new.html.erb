<%= bootstrap_form_for [list, card], remote: true, html: { id: "new-card-#{list.id}", class: 'my-2' } do |form| %>
  <%= form.text_area :title, hide_label: true, wrapper: { class: 'mb-0' }, autofocus: true %>
  <div class="mt-2">
    <%= form.submit t('save'), class: 'btn btn-sm btn-primary' %>
    <a href="#close" class="btn text-pale p-0 bg-0 border-0 mt-2" data-action="removal" data-target='#<%= "new-card-#{list.id}" %>'>
      <span class="text-xxl">&times;</span>
    </a>
  </div>
<% end %>
